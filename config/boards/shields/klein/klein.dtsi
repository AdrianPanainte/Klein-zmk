#include <dt-bindings/zmk/matrix_transform.h>
#include "trackpad_config.dtsi"

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <10>;
		rows = <4>;
// | SW0 | SW5 | SW10 | SW15 | SW20 | SW25		             | SW25 | SW20 | SW15 | SW10 | SW5 | SW1 |
// | SW1 | SW6 | SW11 | SW16 | SW21 | SW26		             | SW26 | SW21 | SW16 | SW11 | SW6 | SW2 |
// | SW2 | SW7 | SW12 | SW17 | SW22 | SW27		             | SW27 | SW22 | SW17 | SW12 | SW7 | SW3 |
// | SW3 | SW8 | SW13 | SW18 | SW23 | SW28		             | SW28 | SW23 | SW18 | SW13 | SW8 | SW4 |
// | SW4 | SW9 | SW14 | SW19 | SW24 | SW29                   | SW29 | SW24 | SW19 | SW14 | SW9 | SW5 |
//                                    SW30                   | SW30
		map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                 RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) 
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)                 RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) 
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)                 RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) 
RC(3,0) RC(3,1) RC(3,2) RC(3,3)                                         RC(3,7) RC(3,8) RC(3,9)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN";

		diode-direction = "row2col";
        row-gpios
            = <&xiao_d 0 GPIO_ACTIVE_HIGH>
            , <&xiao_d 1 GPIO_ACTIVE_HIGH>
            , <&xiao_d 2 GPIO_ACTIVE_HIGH>
            , <&xiao_d 3 GPIO_ACTIVE_HIGH>
            ;
	};

	left_encoder: encoder_left {
        compatible = "alps,ec11";
        label = "LEFT_ENCODER";
        a-gpios = <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&xiao_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        resolution = <2>;
		status = "disabled";
	};

	sensors {
		compatible = "zmk,keymap-sensors";
		sensors = <&left_encoder>;
	};
	trackpad_listener: trackpad_listener {
        compatible = "zmk,input-listener";
        device = <&trackpad>;
    };
};

&i2c1 {
    trackpad: trackpad@74 {
        status = "disabled";
        compatible = "azoteq,iqs5xx";
        reg = <0x74>;
        reset-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;
        rdy-gpios = <&gpio0 10 GPIO_ACTIVE_HIGH>;

        // Gesture features (configured in trackpad_config.dtsi)
#ifdef TRACKPAD_ONE_FINGER_TAP
        one-finger-tap;
#endif
#ifdef TRACKPAD_TWO_FINGER_TAP
        two-finger-tap;
#endif
#ifdef TRACKPAD_PRESS_AND_HOLD
        press-and-hold;
        press-and-hold-time = <TRACKPAD_PRESS_HOLD_TIME>;
#endif
#ifdef TRACKPAD_SCROLL
        scroll;
#endif

        // Scroll direction (configured in trackpad_config.dtsi)
#ifdef TRACKPAD_NATURAL_SCROLL_Y
        natural-scroll-y;
#endif
#ifdef TRACKPAD_NATURAL_SCROLL_X
        natural-scroll-x;
#endif

        // Sensitivity settings (configured in trackpad_config.dtsi)
        bottom-beta = <TRACKPAD_BOTTOM_BETA>;
        stationary-threshold = <TRACKPAD_STATIONARY_THRESHOLD>;

        // Orientation (configured in trackpad_config.dtsi)
#ifdef TRACKPAD_SWITCH_XY
        switch-xy;
#endif
#ifdef TRACKPAD_FLIP_X
        flip-x;
#endif
#ifdef TRACKPAD_FLIP_Y
        flip-y;
#endif
    };
};

/ {
    trackpad_input: trackpad_input {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&trackpad>;
    };

    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        trackpad_peripheral_split: trackpad_peripheral_split@74 {
            compatible = "zmk,input-split";
            reg = <0x74>;
        };
    };
};

